<div id="lose_container">
  <div>
    <span>Sorry! You've been<span><span><%= image_tag("/assets/ponged1.png") %></span>
  </div>
  <div>
    <h3>The Final Score Was:</h3>
    <div><span class="final_score">Player: <%= @final_score_player %></span><span class="final_score">Computer: <%= @final_score_computer %></span></div>
  </div>
  <div class="said">
    <h3>These are All of the Movies That Were Said:</h3>
    <ul>
      <% @final_movies.each do |movie| %>
        <li><%= movie.title %> <%= movie.year%></li>
      <% end %>
    </ul>
  </div>
  <div class="said">
    <h3>These are All of the Actors That Were Said:</h3>
    <ul>
      <% @final_actors.each do |actor| %>
        <li><%= actor.name %></li>
      <% end %>
    </ul>
  </div>
  <form action="<%= play_start_path %>" method="get">
    <button class="other_but">Play Again</button>
  </form>
</div>